#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    # This manually adds your "Hub" folders to the search list
    selected=$( {
        printf "~/Dotfiles\n~/Github\n~/Codes\n~/Documents/college\n~/Downloads\n"
        find ~/Github ~/Documents/college ~/Codes ~/Downloads ~/Dotfiles -mindepth 1 -maxdepth 1 -type d
    } | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

# Convert ~ to real path
selected=$(eval echo "$selected")
selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
